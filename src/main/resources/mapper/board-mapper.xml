<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.practice.BoardRepository">
	
	<select id="selectBoardList" resultType="com.practice.Board">
		SELECT bid, title, content FROM TB_BOARD
	</select>
	
	<insert id="insertBoard" parameterType="com.practice.Board">
		INSERT INTO TB_BOARD(TITLE, CONTENT)
		VALUES (
			  #{title}
			, #{content}
		)
	</insert>
	
	<delete id="deleteBoard" parameterType="java.lang.String">
		DELETE FROM TB_BOARD
		WHERE BID = #{bid}
	</delete>
	
</mapper>